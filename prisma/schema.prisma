generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["public"]
}

model User {
  id               String        @id @default(uuid())
  email            String        @unique
  emailVerified    DateTime?
  passwordHash     String?
  name             String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  deletedAt        DateTime?

  // relations
  boardsOwned      Board[]       @relation("BoardOwner")
  boardMemberships BoardMember[]
  designs          Design[]      @relation("DesignOwner")
  sharedWithMe     SharedDesign[] @relation("SharedWith")
  sharedByMe       SharedDesign[] @relation("SharedBy")

  @@index([email])
  @@schema("public")
}

model Board {
  id          String        @id @default(uuid())
  name        String
  description String?
  isPublic    Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?

  // relations
  ownerId     String
  owner       User          @relation("BoardOwner", fields: [ownerId], references: [id])
  members     BoardMember[]
  designs     Design[]

  @@index([ownerId])
  @@index([isPublic])
  @@schema("public")
}

model BoardMember {
  id        String    @id @default(uuid())
  boardId   String
  userId    String
  role      BoardRole @default(VIEWER)
  joinedAt  DateTime  @default(now())

  board     Board     @relation(fields: [boardId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([boardId, userId])
  @@index([userId])
  @@index([boardId])
  @@schema("public")
}

model Design {
  id             String     @id @default(uuid())
  title          String
  description    String?
  data           Json?
  thumbnailUrl   String?
  isPublished    Boolean    @default(false)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  deletedAt      DateTime?

  // relations
  ownerId        String
  owner          User          @relation("DesignOwner", fields: [ownerId], references: [id])
  boardId        String?
  board          Board?        @relation(fields: [boardId], references: [id])
  sharedRecords  SharedDesign[]

  @@index([ownerId])
  @@index([boardId])
  @@index([isPublished])
  @@schema("public")
}

model SharedDesign {
  id           String      @id @default(uuid())
  designId     String
  sharedById   String
  sharedWithId String
  permission   Permission  @default(READ)
  message      String?
  expiresAt    DateTime?
  createdAt    DateTime    @default(now())

  design       Design      @relation(fields: [designId], references: [id])
  sharedBy     User        @relation("SharedBy", fields: [sharedById], references: [id])
  sharedWith   User        @relation("SharedWith", fields: [sharedWithId], references: [id])

  @@unique([designId, sharedWithId])
  @@index([sharedWithId])
  @@index([sharedById])
  @@index([designId])
  @@schema("public")
}

enum BoardRole {
  OWNER
  EDITOR
  VIEWER
  @@schema("public")
}

enum Permission {
  READ
  COMMENT
  WRITE
  OWNER
  @@schema("public")
}
