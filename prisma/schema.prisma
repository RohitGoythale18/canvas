generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  password      String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  deletedAt     DateTime?

  // Relations
  boards        Board[]
  designs       Design[]

  sharedByMe    SharedDesign[] @relation("SharedByMe")
  sharedWithMe  SharedDesign[] @relation("SharedWithMe")

  notifications Notification[]
  pushSubscription PushSubscription?

  @@index([email])
}

model Board {
  id          String     @id @default(uuid())
  name        String
  description String?
  isPublic    Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?

  // Relations
  ownerId     String
  owner       User       @relation(fields: [ownerId], references: [id])
  designs     Design[]

  @@index([ownerId])
  @@index([isPublic])
}

model Design {
  id            String     @id @default(uuid())
  title         String
  description   String?
  data          Json?
  image         String?
  thumbnailUrl  String?
  isPublished   Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  deletedAt     DateTime?

  // Relations
  ownerId       String
  owner         User       @relation(fields: [ownerId], references: [id])

  boardId       String
  board         Board      @relation(fields: [boardId], references: [id])

  sharedWith    SharedDesign[]

  @@index([ownerId])
  @@index([boardId])
  @@index([isPublished])
}

model SharedDesign {
  id            String      @id @default(uuid())
  designId      String
  ownerId       String
  sharedWithId  String
  permission    Permission  @default(READ)
  createdAt     DateTime    @default(now())

  design        Design      @relation(fields: [designId], references: [id])
  owner         User        @relation("SharedByMe", fields: [ownerId], references: [id])
  sharedWith    User        @relation("SharedWithMe", fields: [sharedWithId], references: [id])

  @@index([designId])
  @@index([ownerId])
  @@index([sharedWithId])
}

model Notification {
  id        String            @id @default(uuid())
  userId    String
  message   String
  type      NotificationType @default(INFO)
  isRead    Boolean           @default(false)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  user      User              @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([isRead])
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String   @unique
  data      Json
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum Permission {
  READ
  COMMENT
  WRITE
  OWNER
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}
